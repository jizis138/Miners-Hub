<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Momento" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSurface">@color/dark_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondaryContainer">@color/light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/dark_light</item>
        <!-- Customize your theme here. -->
        <item name="appBarLayoutStyle">@style/StyleAppBar</item>
    </style>

    <style name="StyleAppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="android:background">@null</item>
        <item name="elevation">0dp</item>
    </style>
</resources>